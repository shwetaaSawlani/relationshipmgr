<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">

    <service verb="create" noun="Party" type="entity-auto">
        <in-parameters>
            <auto-parameters entity-name="Party" include="nonpk" />
        </in-parameters>
        <out-parameters>
            <parameter name="partyId"/>
        </out-parameters>
    </service>

    <service verb="create" noun="Person">
        <in-parameters>
            <auto-parameters entity-name="Person" include="nonpk" />
            <auto-parameters entity-name="Party" include="nonpk" />
        </in-parameters>
        <out-parameters>
            <parameter name="partyId"/>
        </out-parameters>
        <actions>
            <service-call name="create#Party" in-map="context" out-map="context"/>
            <service-call name="create#Person" in-map="context" out-map="context"/>
        </actions>
    </service>

    <service verb="create" noun="Organization">
        <in-parameters>
            <auto-parameters entity-name="Organization" include="nonpk" />
            <auto-parameters entity-name="Party" include="nonpk" />
        </in-parameters>
        <out-parameters>
            <parameter name="partyId"/>
        </out-parameters>
        <actions>
            <service-call name="create#Party" in-map="context" out-map="context"/>
            <service-call name="create#Organization" in-map="context" out-map="context"/>
        </actions>
    </service>
    <!-- Service for creating PartyRole -->
    <service verb="create" noun="PartyRole" type="entity-auto">
        <in-parameters>
            <auto-parameters entity-name="PartyRole" include="nonpk" />
        </in-parameters>
        <out-parameters>
            <parameter name="partyId" />
            <parameter name="roleTypeId" />
        </out-parameters>
    </service>

    <!-- Service for creating PartyContactMech -->
    <service verb="create" noun="PartyContactMech" type="entity-auto">
        <in-parameters>
            <auto-parameters entity-name="PartyContactMech" include="nonpk" />
        </in-parameters>
        <out-parameters>
            <parameter name="partyId" />
            <parameter name="contactMechId" />
        </out-parameters>
    </service>

    <!-- Service for creating ContactMech -->
    <service verb="create" noun="ContactMech" type="entity-auto">
        <in-parameters>
            <auto-parameters entity-name="ContactMech" include="nonpk" />
        </in-parameters>
        <out-parameters>
            <parameter name="contactMechId" />
        </out-parameters>
    </service>

    <!-- Service for creating TelecomNumber -->
    <service verb="create" noun="TelecomNumber">
        <in-parameters>
            <auto-parameters entity-name="TelecomNumber" include="nonpk" />
        </in-parameters>
        <out-parameters>
            <parameter name="contactMechId" />
        </out-parameters>
        <actions>
            <service-call name="create#ContactMech" in-map="context" out-map="context" />
            <service-call name="create#TelecomNumber" in-map="context" out-map="context" />
        </actions>
    </service>

    <!-- Service for creating PostalAddress -->
    <service verb="create" noun="PostalAddress">
        <in-parameters>
            <auto-parameters entity-name="PostalAddress" include="nonpk" />
        </in-parameters>
        <out-parameters>
            <parameter name="contactMechId" />
        </out-parameters>
        <actions>
            <service-call name="create#ContactMech" in-map="context" out-map="context" />
            <service-call name="create#PostalAddress" in-map="context" out-map="context" />
        </actions>
    </service>
</services>


